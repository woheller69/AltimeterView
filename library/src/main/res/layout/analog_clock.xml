<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipChildren="false"
  android:clipToPadding="true">
  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:src="@drawable/ic_altimeter_back"/>
  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/face"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:src="@drawable/ic_altimeter_face"/>
  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/dial"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerInParent="true"
      android:src="@drawable/ic_altimeter_dial"/>
  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/hour_hand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:src="@drawable/ic_altimeter_10k"/>
  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/minute_hand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:src="@drawable/ic_altimeter_1k"/>
  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/second_hand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:src="@drawable/ic_altimeter_1"/>
</RelativeLayout>
